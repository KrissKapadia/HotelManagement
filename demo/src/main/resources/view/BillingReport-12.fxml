<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="800.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controllers.AdminReportsController">

    <top>
        <VBox alignment="CENTER" spacing="15" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20" />
            </padding>

            <Label text="Billing &amp; Reports">
                <font>
                    <Font name="System Bold" size="28.0" />
                </font>
            </Label>

            <HBox alignment="CENTER" spacing="10">
                <Label text="Search by Mobile Number:" />
                <TextField fx:id="searchField" prefWidth="250" promptText="Enter Mobile Number..." />
                <Button fx:id="generateReportButton" text="Generate Report" onAction="#handleGenerateReport" />
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
            <content>
                <VBox fx:id="billView" alignment="TOP_CENTER" spacing="20" style="-fx-background-color: #FFFFFF; -fx-padding: 25;">
                    <padding>
                        <Insets top="10" right="50" bottom="20" left="50" />
                    </padding>

                    <Label text="Hotel ABC">
                        <font>
                            <Font name="System Bold" size="26.0" />
                        </font>
                    </Label>
                    <Label text="Official Guest Invoice">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                    <Separator prefWidth="500" />

                    <GridPane hgap="15" vgap="10" maxWidth="600">
                        <columnConstraints>
                            <ColumnConstraints prefWidth="200" halignment="RIGHT" />
                            <ColumnConstraints prefWidth="400" />
                        </columnConstraints>

                        <Label text="Guest Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                        <Label fx:id="guestNameLabel" text="N/A" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                        <Label text="Reservation ID:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                        <Label fx:id="reservationIdLabel" text="N/A" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                        <Label text="Bill ID:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                        <Label fx:id="billIdLabel" text="N/A" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                        <Label text="Check-in Date:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                        <Label fx:id="checkInLabel" text="N/A" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                        <Label text="Check-out Date:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                        <Label fx:id="checkOutLabel" text="N/A" GridPane.rowIndex="4" GridPane.columnIndex="1" />

                        <Label text="Bill Date:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                        <Label fx:id="billDateLabel" text="N/A" GridPane.rowIndex="5" GridPane.columnIndex="1" />
                    </GridPane>

                    <Separator prefWidth="500" />

                    <Label text="Charges Summary">
                        <font>
                            <Font name="System Bold" size="18.0" />
                        </font>
                    </Label>

                    <GridPane hgap="15" vgap="10" alignment="CENTER" maxWidth="400">
                        <Label text="Room Charges:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                        <Label fx:id="roomChargesLabel" text="[Charges]" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                        <Label text="Taxes:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                        <Label fx:id="taxesLabel" text="[Taxes]" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                        <Label text="Subtotal:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                        <Label fx:id="subtotalLabel" text="[Sub-Total]" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                        <Label text="Discount (%):" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                        <HBox spacing="5" alignment="CENTER_LEFT" GridPane.rowIndex="3" GridPane.columnIndex="1">
                            <TextField fx:id="discountField" prefWidth="80" promptText="if applicable" />
                            <Label text="(if applicable)" />
                        </HBox>

                        <Label text="Discount Value:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                        <Label fx:id="discountLabel" text="-$0.00" GridPane.rowIndex="4" GridPane.columnIndex="1" />
                    </GridPane>

                    <Separator prefWidth="500" />

                    <HBox alignment="CENTER" spacing="20">
                        <Label text="Total Amount Due:">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                        </Label>
                        <Label fx:id="totalAmountLabel" text="[Total due]">
                            <font>
                                <Font name="System Bold" size="22.0" />
                            </font>
                        </Label>
                    </HBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10" bottom="20" />
            </padding>
            <Button fx:id="printBillButton" text="Print Bill" prefWidth="120" onAction="#handlePrintBill" />
            <Button fx:id="backButton" text="Back to Dashboard" prefWidth="150" onAction="#handleBack" />
        </HBox>
    </bottom>

</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="567.0" prefWidth="578.0" style="-fx-background-color: #F8F8F8;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controllers.KioskDateSelectionController">
    <center>
        <VBox alignment="TOP_CENTER" prefHeight="431.0" prefWidth="843.0" spacing="20.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 5; -fx-padding: 40px;" BorderPane.alignment="CENTER">
            <children>
                <Label text="Select Your Dates">
                    <font>
                        <Font name="System Bold" size="36.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="15.0" />
                    </VBox.margin>
                </Label>
                <Label text="Please select your desired check-in and check-out dates.">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Label>
                <HBox alignment="CENTER" spacing="40.0">
                    <children>
                        <VBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Label text="Check-in Date:">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </Label>
                                <DatePicker fx:id="checkInDatePicker" onAction="#updateNightsLabel" prefHeight="40.0" prefWidth="200.0" style="-fx-background-radius: 3; -fx-border-color: #CCCCCC; -fx-border-radius: 3;">
                                    <tooltip>
                                        <Tooltip text="Select your check-in date" />
                                    </tooltip>
                                </DatePicker>
                            </children>
                        </VBox>
                        <VBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Label text="Check-out Date:">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </Label>
                                <DatePicker fx:id="checkOutDatePicker" onAction="#updateNightsLabel" prefHeight="40.0" prefWidth="200.0" style="-fx-background-radius: 3; -fx-border-color: #CCCCCC; -fx-border-radius: 3;">
                                    <tooltip>
                                        <Tooltip text="Select your check-out date" />
                                    </tooltip>
                                </DatePicker>
                            </children>
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>
                <Label fx:id="nightsLabel" style="-fx-text-fill: #555555;" text="Number of Nights: -">
                    <font>
                        <Font size="20.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>
                <Label fx:id="validationMessageLabel" style="-fx-text-fill: red;" text="" wrapText="true">
                    <font>
                        <Font size="16.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="15.0" />
                    </VBox.margin>
                </Label>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" prefHeight="45.0" prefWidth="120.0" text="Back">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                            <tooltip>
                                <Tooltip text="Go back to the welcome page" />
                            </tooltip>
                        </Button>
                        <Button fx:id="continueButton" mnemonicParsing="false" onAction="#handleContinueToGuests" prefHeight="45.0" prefWidth="180.0" text="Continue">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                            <tooltip>
                                <Tooltip text="Proceed to select number of guests" />
                            </tooltip>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets top="30.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="BOTTOM_RIGHT" BorderPane.alignment="BOTTOM_RIGHT">
            <children>
                <Button fx:id="rulesButton" mnemonicParsing="false" onAction="#handleViewRules" text="Rules &amp; Regulations">
                    <font>
                        <Font size="12.0" />
                    </font>
                    <tooltip>
                        <Tooltip text="View hotel policies and rules" />
                    </tooltip>
                    <HBox.margin>
                        <Insets bottom="15.0" right="15.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </bottom>
</BorderPane>
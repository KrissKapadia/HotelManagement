<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="502.0" prefWidth="619.0" style="-fx-background-color: #F8F8F8;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controllers.KioskGuestSelectionController">
    <center>
        <VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 5; -fx-padding: 40px;" BorderPane.alignment="CENTER">
            <children>
                <Label text="Select Number of Guests">
                    <font>
                        <Font name="System Bold" size="36.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="15.0" />
                    </VBox.margin>
                </Label>
                <Label text="Please specify the number of adults and children.">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Label>
                <HBox alignment="CENTER" spacing="60.0">
                    <children>
                        <VBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Label text="Adults:">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </Label>
                                <Spinner fx:id="adultsSpinner" editable="true" initialValue="1" max="10" min="1" prefHeight="40.0" prefWidth="80.0" style="-fx-background-radius: 3; -fx-border-color: #CCCCCC; -fx-border-radius: 3;">
                                    <tooltip>
                                        <Tooltip text="Number of adult guests" />
                                    </tooltip>
                                </Spinner>
                            </children>
                        </VBox>
                        <VBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Label text="Children (under 12):">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </Label>
                                <Spinner fx:id="childrenSpinner" editable="true" initialValue="0" max="5" min="0" prefHeight="40.0" prefWidth="80.0" style="-fx-background-radius: 3; -fx-border-color: #CCCCCC; -fx-border-radius: 3;">
                                    <tooltip>
                                        <Tooltip text="Number of children guests" />
                                    </tooltip>
                                </Spinner>
                            </children>
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets top="15.0" />
                    </VBox.margin>
                </HBox>
                <Label fx:id="validationMessageLabel" style="-fx-text-fill: red;" text="" wrapText="true">
                    <font>
                        <Font size="16.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="15.0" />
                    </VBox.margin>
                </Label>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" prefHeight="45.0" prefWidth="120.0" text="Back">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                            <tooltip>
                                <Tooltip text="Go back to the date selection page" />
                            </tooltip>
                        </Button>
                        <Button fx:id="clearButton" mnemonicParsing="false" onAction="#handleClear" prefHeight="45.0" prefWidth="120.0" text="Clear All">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                            <tooltip>
                                <Tooltip text="Reset guest inputs on this page" />
                            </tooltip>
                        </Button>
                        <Button fx:id="searchRoomsButton" mnemonicParsing="false" onAction="#handleSearchRooms" prefHeight="45.0" prefWidth="180.0" text="Search Rooms">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                            <tooltip>
                                <Tooltip text="Find available rooms based on your selection" />
                            </tooltip>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets top="30.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="BOTTOM_RIGHT" BorderPane.alignment="BOTTOM_RIGHT">
            <children>
                <Button fx:id="rulesButton" mnemonicParsing="false" onAction="#handleViewRules" text="Rules &amp; Regulations">
                    <font>
                        <Font size="12.0" />
                    </font>
                    <tooltip>
                        <Tooltip text="View hotel policies and rules" />
                    </tooltip>
                    <HBox.margin>
                        <Insets bottom="15.0" right="15.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </bottom>
</BorderPane>
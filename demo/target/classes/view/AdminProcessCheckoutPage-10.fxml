<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controllers.AdminCheckOutController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="15.0" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.bottomAnchor="10.0">
            <children>
                <Label text="Guest Check-Out &amp; Billing">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                </Label>

                <HBox spacing="10">
                    <children>
                        <Label text="Search by Phone Number:" />
                        <TextField fx:id="phoneSearchField" promptText="Enter phone number" />
                        <Button fx:id="searchButton" text="Search" onAction="#handleSearch" />
                    </children>
                </HBox>

                <!-- Added fx:id="checkoutDetailsView" to this VBox -->
                <VBox fx:id="checkoutDetailsView" spacing="10.0" style="-fx-border-color: #D1D5DB; -fx-border-radius: 8; -fx-padding: 20;">
                    <children>
                        <Label fx:id="reservationInfoLabel" text="Reservation ID: #    Guest: ">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>

                        <GridPane hgap="10.0" vgap="5.0">
                            <columnConstraints>
                                <ColumnConstraints minWidth="150.0" />
                                <ColumnConstraints minWidth="300.0" />
                            </columnConstraints>
                            <children>
                                <Label text="Guest Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                                <Label fx:id="guestNameLabel" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                                <Label text="Phone Number:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                                <Label fx:id="phoneNumberLabel" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                                <Label text="Reservation ID:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                                <Label fx:id="reservationIdLabel" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                                <Label text="Check-in Date:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                                <Label fx:id="checkInDateLabel" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                                <Label text="Check-out Date:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                                <Label fx:id="checkOutDateLabel" GridPane.rowIndex="4" GridPane.columnIndex="1" />

                                <Label text="Room Type:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                                <Label fx:id="roomTypeLabel" GridPane.rowIndex="5" GridPane.columnIndex="1" />

                                <Label text="Room Charges:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
                                <Label fx:id="roomChargesLabel" GridPane.rowIndex="6" GridPane.columnIndex="1" />

                                <Label text="Taxes:" GridPane.rowIndex="7" GridPane.columnIndex="0" />
                                <Label fx:id="taxesLabel" GridPane.rowIndex="7" GridPane.columnIndex="1" />

                                <Label text="Discount (%):" GridPane.rowIndex="8" GridPane.columnIndex="0" />
                                <TextField fx:id="discountField" promptText="e.g. 10" prefWidth="80.0" GridPane.rowIndex="8" GridPane.columnIndex="1" />

                                <Label text="Subtotal:" GridPane.rowIndex="9" GridPane.columnIndex="0">
                                    <font><Font name="System Bold" size="14.0" /></font>
                                </Label>
                                <Label fx:id="subtotalLabel" GridPane.rowIndex="9" GridPane.columnIndex="1">
                                    <font><Font name="System Bold" size="14.0" /></font>
                                </Label>
                            </children>
                        </GridPane>

                        <Separator />

                        <Label fx:id="totalAmountLabel" text="Total Amount Due: $0.00">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <Label style="-fx-padding: 10;" text="Reminder: Please inform the guest they can now leave feedback at the kiosk." wrapText="true" />

                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="printBillButton" text="Print Bill" onAction="#handlePrintBill" />
                        <Button fx:id="checkoutButton" text="Proceed Checkout" onAction="#handleCheckout" />
                        <Button fx:id="backButton" text="Back" onAction="#handleBack" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets top="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="598.0" prefWidth="653.0" style="-fx-background-color: #F8F8F8;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controllers.KioskRulesController">
    <center>
        <VBox alignment="TOP_CENTER" prefHeight="694.0" prefWidth="1024.0" spacing="20.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 5; -fx-padding: 40px;" BorderPane.alignment="CENTER">
            <children>
                <Label text="Hotel Rules &amp; Regulations">
                    <font>
                        <Font name="System Bold" size="36.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="15.0" />
                    </VBox.margin>
                </Label>
                <Label text="Please read the following guidelines to ensure a pleasant stay for everyone.">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Label>

                <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-border-color: #CCCCCC; -fx-border-radius: 5; -fx-background-radius: 5;" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox spacing="10.0" style="-fx-padding: 15px;">
                            <children>
                                <Label text="1. Check-in/Check-out Times:" wrapText="true">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <Label text="Check-in is from 3:00 PM. Check-out is by 11:00 AM. Late check-out may incur additional charges." wrapText="true" />

                                <Label text="2. Smoking Policy:" wrapText="true">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <Label text="Hotel ABC is a non-smoking facility. Smoking is strictly prohibited in all indoor areas, including guest rooms and common spaces. Designated smoking areas are available outdoors." wrapText="true" />

                                <Label text="3. Pet Policy:" wrapText="true">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <Label text="Pets are not allowed on the premises, with the exception of service animals. Please notify the front desk in advance if you are accompanied by a service animal." wrapText="true" />

                                <Label text="4. Noise Policy:" wrapText="true">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <Label text="Guests are kindly requested to keep noise levels to a minimum, especially between 10:00 PM and 7:00 AM, to ensure a peaceful environment for all guests." wrapText="true" />

                                <Label text="5. Property Damage:" wrapText="true">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <Label text="Guests will be held responsible for any damage to hotel property caused by negligence or willful misconduct." wrapText="true" />

                                <Label text="6. Lost and Found:" wrapText="true">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <Label text="The hotel is not responsible for lost or stolen personal belongings. Please secure your valuables. Found items will be held for 30 days." wrapText="true" />

                                <Label text="7. Emergency Procedures:" wrapText="true">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <Label text="In case of emergency, please refer to the evacuation map on the back of your room door and follow instructions from hotel staff." wrapText="true" />

                                <Label text="8. Wi-Fi Usage:" wrapText="true">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <Label text="Complimentary Wi-Fi is available for all guests. Usage should be for lawful purposes only and adhere to fair usage policies." wrapText="true" />

                                <Label text="9. Guest Behavior:" wrapText="true">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <Label text="We expect all guests to behave respectfully towards other guests and hotel staff. Any disruptive or offensive behavior will not be tolerated." wrapText="true" />

                                <Label text="10. Right to Refuse Service:" wrapText="true">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <Label text="The hotel reserves the right to refuse service or accommodation to anyone, and to remove any person who violates hotel policies or engages in inappropriate conduct." wrapText="true" />
                            </children>
                        </VBox>
                    </content>
                </ScrollPane>

                <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" prefHeight="36.0" prefWidth="211.0" text="Back to Previous Page">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                    <tooltip>
                        <Tooltip text="Return to the previous screen" />
                    </tooltip>
                </Button>
            </children>
        </VBox>
    </center>
</BorderPane>
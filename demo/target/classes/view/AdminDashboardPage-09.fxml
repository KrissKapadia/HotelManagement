<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="607.0" prefWidth="847.0" style="-fx-background-color: #ECEFF1;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controllers.AdminDashboardController">

    <stylesheets>
        <String fx:value="@admin_dashboard_styles.css" />
    </stylesheets>

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="80.0" style="-fx-padding: 0 40px;" BorderPane.alignment="CENTER">
            <children>
                <Label text="Admin Dashboard">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                </Label>
            </children>
        </HBox>
    </top>

    <left>
        <VBox prefWidth="200.0" spacing="15.0" style="-fx-padding: 30px 10px;" BorderPane.alignment="TOP_LEFT">
            <children>
                <Label text="Navigation">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Label>
                <Button mnemonicParsing="false" onAction="#handleNewReservation" prefWidth="Infinity" styleClass="sidebar-nav-button" text="New Reservation" />
                <Button mnemonicParsing="false" onAction="#handleGuestSearch" prefWidth="Infinity" styleClass="sidebar-nav-button" text="Guest Search" />
                <Button mnemonicParsing="false" onAction="#handleCheckOut" prefWidth="Infinity" styleClass="sidebar-nav-button" text="Check-Out" />
                <Button mnemonicParsing="false" onAction="#handleReports" prefWidth="Infinity" styleClass="sidebar-nav-button" text="Reports" />
            </children>
        </VBox>
    </left>

    <center>
        <VBox alignment="TOP_CENTER" spacing="25.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 20, 0, 0, 0); -fx-padding: 40px;" BorderPane.alignment="CENTER">
            <children>
                <Label text="Current Reservations (Next 24 Hours)" textFill="#333333">
                    <font>
                        <Font name="System Bold" size="26.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="15.0" />
                    </VBox.margin>
                </Label>

                <TableView fx:id="reservationsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="guestNameColumn" prefWidth="200.0" text="Guest Name" />
                        <TableColumn fx:id="roomColumn" prefWidth="100.0" text="Room" />
                        <TableColumn fx:id="checkInTimeColumn" prefWidth="200.0" text="Check-in Time" />
                        <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <placeholder>
                        <Label text="No content in table" />
                    </placeholder>
                </TableView>
            </children>
            <BorderPane.margin>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>
